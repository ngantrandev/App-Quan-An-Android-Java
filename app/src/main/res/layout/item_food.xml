<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:background="@drawable/background_border_rectangle_light"
    android:padding="10dp">


    <TextView
        android:id="@+id/tv_foodname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ten mon an"
        android:paddingRight="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tv_foodimg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_fooddesc"
        android:layout_width="0dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="13sp"
        android:text="mo ta mon anfsdfsdfsdfsdffsdfsdfsdfsdf"
        app:layout_constraintEnd_toStartOf="@+id/tv_foodimg"
        app:layout_constraintStart_toStartOf="@+id/tv_foodname"
        app:layout_constraintTop_toBottomOf="@+id/tv_foodname" />

    <TextView
        android:id="@+id/tv_newprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="125000"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/textView19"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="@string/tv_curency_vnd"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_newprice"
        app:layout_constraintStart_toEndOf="@+id/tv_newprice"
        app:layout_constraintTop_toTopOf="@+id/tv_newprice"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Còn lại:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tv_newprice"
        app:layout_constraintTop_toBottomOf="@+id/tv_newprice" />

    <TextView
        android:id="@+id/tv_soluongton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="10"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView13"
        app:layout_constraintStart_toEndOf="@+id/textView13"
        app:layout_constraintTop_toTopOf="@+id/textView13"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_modify_food"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Chỉnh sửa"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_delete_food"
        app:layout_constraintEnd_toStartOf="@+id/btn_delete_food"
        app:layout_constraintTop_toTopOf="@+id/btn_delete_food"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_delete_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xóa"
        android:layout_marginTop="10dp"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_foodimg"
        app:layout_constraintTop_toBottomOf="@+id/tv_foodimg" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/tv_foodimg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:civ_border_width="2dp"
        android:src="@drawable/food_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_oldprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="150000"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_newprice"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toTopOf="@+id/tv_newprice"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_currencylabel_item_listfood_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="@string/tv_curency_vnd"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_oldprice"
        app:layout_constraintStart_toEndOf="@+id/tv_oldprice"
        app:layout_constraintTop_toTopOf="@+id/tv_oldprice"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvFoodType_itemfood_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Com"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView19"
        app:layout_constraintStart_toEndOf="@+id/textView19"
        app:layout_constraintTop_toTopOf="@+id/textView19"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textStyle="bold"
        android:textSize="12dp"
        android:text="Danh mục:"
        app:layout_constraintStart_toStartOf="@+id/tv_fooddesc"
        app:layout_constraintTop_toBottomOf="@+id/tv_fooddesc" />

</androidx.constraintlayout.widget.ConstraintLayout>