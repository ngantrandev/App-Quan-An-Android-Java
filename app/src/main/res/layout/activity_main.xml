<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.8"
    android:background="@drawable/food_image">


    <LinearLayout
        android:id="@+id/btn_show_info"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/background_item_userinfo"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_useravt_activitymain"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img_avatar" />

        <TextView
            android:id="@+id/tv_user_fullname_activitymain"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Tran Van Ngan"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_gravity="bottom"
        android:layout_margin="10dp"
        android:background="@drawable/gradient_transparent_bordertop_background_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-16dp">


        <LinearLayout
            android:id="@+id/group_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            >

            <ImageButton
                android:id="@+id/btn_showfood_activitymain"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/border_background_button_activitymain"
                android:src="@drawable/ic_food" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Món ăn"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/group_btn_show_category_mainactivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/group_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/group_1"
            app:layout_constraintTop_toTopOf="@+id/group_1"
            app:layout_constraintVertical_bias="0.0">

            <ImageButton
                android:id="@+id/btn_show_category_mainactivity"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/border_background_button_activitymain"
                android:src="@drawable/ic_tag" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loại món"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/group_btn_thongke_mainactivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@+id/group_1"

            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/group_1"
            app:layout_constraintTop_toBottomOf="@+id/group_1">

            <ImageButton
                android:id="@+id/btn_thongke_mainactivity"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/border_background_button_activitymain"
                android:src="@drawable/ic_chart" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thống kê"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/group_btn_show_tablelist_mainactivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/group_btn_thongke_mainactivity"
            app:layout_constraintEnd_toEndOf="@+id/group_btn_show_category_mainactivity"

            app:layout_constraintStart_toStartOf="@+id/group_btn_show_category_mainactivity"
            app:layout_constraintTop_toTopOf="@+id/group_btn_thongke_mainactivity">

            <ImageButton
                android:id="@+id/btn_show_tablelist_mainactivity"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/border_background_button_activitymain"
                android:contentDescription="TODO"
                android:src="@drawable/ic_table" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bàn ăn"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/group_btn_dat_ban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="@+id/group_btn_thongke_mainactivity"
            app:layout_constraintStart_toStartOf="@+id/group_btn_thongke_mainactivity"
            app:layout_constraintTop_toBottomOf="@+id/group_btn_thongke_mainactivity">

            <ImageButton
                android:id="@+id/btnDatbanactivityMain"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/border_background_button_activitymain"
                android:contentDescription="TODO"
                android:src="@drawable/ic_table" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dat ban"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/ic_bell" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/ic_home" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/ic_settings" />
    </LinearLayout>


</FrameLayout>