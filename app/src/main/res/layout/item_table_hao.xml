<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/itemTableContainer"
        app:cardBackgroundColor="#FFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="10dp"
        android:layout_marginVertical="5dp"
        >
    <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:weightSum="5"
        >
    <LinearLayout
        android:layout_weight="4"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_weight="8"
            android:weightSum="10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
        <TextView
            android:id="@+id/itemTableName"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Bàn số"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/itemTableNote"
            android:layout_weight="6"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Ghi chú"
            android:textSize="10dp"
            android:textColor="#000000"
            />
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
                <TextView
                    android:id="@+id/itemTableLabelStatus"
                    android:paddingVertical="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Trạng thái"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                />
                <TextView
                    android:layout_marginHorizontal="10dp"
                    android:id="@+id/itemTableStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Trống"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/itemTableThumb"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/thumbtest"
                app:civ_border_width="0dp"
                app:civ_border_color="#FF000000"
                android:scaleType="centerCrop"
                android:padding="5dp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:weightSum="5"
        >
        <Button
            android:id="@+id/itemTableBtnReturn"
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Trả bàn"
            android:background="@drawable/btn_backgroud"
            android:textColor="@color/contentbutton"
            android:drawableTint="@color/contentbutton"
            />
        <LinearLayout
            android:gravity="right"
            android:layout_weight="4"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:weightSum="5"
            >
        <Button
            android:layout_weight="1"
            android:id="@+id/itemTableBtnNote"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Ghi chú"
            android:background="@drawable/btn_backgroud"
            android:drawableLeft="@drawable/baseline_edit_note_24"
            android:textColor="@color/contentbutton"
            android:drawableTint="@color/contentbutton"
            android:padding="10dp"
            />
            />
        <Button
            android:layout_weight="1"
            android:textColor="@color/contentbutton"
            android:drawableTint="@color/contentbutton"
            android:id="@+id/itemTableBtnSel"
            android:background="@drawable/btn_backgroud"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Chọn bàn"
            />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>